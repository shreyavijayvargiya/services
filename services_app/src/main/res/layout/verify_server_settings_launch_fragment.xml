<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_margin="8dp"
              android:background="#F0F5FA">

    <TextView
            android:id="@+id/sync_uri_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/colorHeadings"
            android:textSize="20sp"
            android:text="@string/sync_server_url"/>

    <TextView
            android:id="@+id/sync_uri_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:textSize="17sp"/>

    <TextView
            android:id="@+id/sync_account_auth_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/colorHeadings"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:text="@string/username"/>

    <TextView
            android:id="@+id/sync_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:textSize="17sp"
            android:textStyle="bold"/>


    <Button
        android:id="@+id/verify_server_settings_start_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/button_gradient"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="@string/verify_server_settings_start"/>
</LinearLayout>
